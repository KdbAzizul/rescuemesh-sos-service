{
  "openapi": "3.0.0",
  "info": {
    "title": "RescueMesh SOS Service API",
    "version": "1.0.0",
    "description": "API documentation for the Emergency Request (SOS) Service in the RescueMesh platform."
  },
  "servers": [
    {
      "url": "http://localhost:3004",
      "description": "Local SOS Service"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "tags": ["Health"],
        "responses": {
          "200": {
            "description": "Service is healthy"
          },
          "503": {
            "description": "Service is unhealthy or degraded"
          }
        }
      }
    },
    "/api/sos/requests": {
      "post": {
        "summary": "Create a new SOS request",
        "tags": ["SOS Requests"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateSOSRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "SOS request created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SOSRequest"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request payload"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "get": {
        "summary": "List SOS requests",
        "tags": ["SOS Requests"],
        "parameters": [
          {
            "name": "disasterId",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "Filter by disaster ID"
          },
          {
            "name": "status",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["pending", "matched", "in_progress", "resolved", "cancelled"]
            },
            "description": "Filter by request status"
          },
          {
            "name": "urgency",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": ["critical", "high", "medium", "low"]
            },
            "description": "Filter by urgency"
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 50
            }
          },
          {
            "name": "offset",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 0
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of SOS requests",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "requests": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/SOSRequestSummary"
                      }
                    },
                    "total": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/api/sos/requests/{requestId}": {
      "get": {
        "summary": "Get SOS request by ID",
        "tags": ["SOS Requests"],
        "parameters": [
          {
            "name": "requestId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "SOS request details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SOSRequestWithMatches"
                }
              }
            }
          },
          "404": {
            "description": "Request not found"
          }
        }
      }
    },
    "/api/sos/requests/{requestId}/status": {
      "put": {
        "summary": "Update SOS request status",
        "tags": ["SOS Requests"],
        "parameters": [
          {
            "name": "requestId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "status": {
                    "type": "string",
                    "enum": ["pending", "matched", "in_progress", "resolved", "cancelled"]
                  }
                },
                "required": ["status"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Status updated",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "requestId": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    },
                    "matchedAt": {
                      "type": "string",
                      "format": "date-time",
                      "nullable": true
                    },
                    "resolvedAt": {
                      "type": "string",
                      "format": "date-time",
                      "nullable": true
                    },
                    "updatedAt": {
                      "type": "string",
                      "format": "date-time"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid status value"
          },
          "404": {
            "description": "Request not found"
          }
        }
      }
    },
    "/api/sos/requests/{requestId}/trigger-matching": {
      "post": {
        "summary": "Trigger matching for an SOS request",
        "tags": ["SOS Requests"],
        "parameters": [
          {
            "name": "requestId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Matching triggered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "requestId": {
                      "type": "string"
                    },
                    "matchingTriggered": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Request not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Location": {
        "type": "object",
        "properties": {
          "latitude": {
            "type": "number",
            "format": "double"
          },
          "longitude": {
            "type": "number",
            "format": "double"
          }
        },
        "required": ["latitude", "longitude"]
      },
      "CreateSOSRequest": {
        "type": "object",
        "properties": {
          "disasterId": {
            "type": "string"
          },
          "requestedBy": {
            "type": "string"
          },
          "requiredSkills": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "requiredResources": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "urgency": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "numberOfPeople": {
            "type": "integer",
            "minimum": 1
          },
          "location": {
            "$ref": "#/components/schemas/Location"
          },
          "description": {
            "type": "string"
          },
          "contactPhone": {
            "type": "string"
          }
        },
        "required": ["disasterId", "requestedBy", "urgency", "location"]
      },
      "SOSRequest": {
        "type": "object",
        "properties": {
          "requestId": {
            "type": "string"
          },
          "disasterId": {
            "type": "string"
          },
          "requestedBy": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "requiredSkills": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "requiredResources": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "urgency": {
            "type": "string"
          },
          "numberOfPeople": {
            "type": "integer"
          },
          "location": {
            "$ref": "#/components/schemas/Location"
          },
          "description": {
            "type": "string"
          },
          "contactPhone": {
            "type": "string"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          },
          "matchedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "resolvedAt": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      },
      "SOSRequestSummary": {
        "type": "object",
        "properties": {
          "requestId": {
            "type": "string"
          },
          "disasterId": {
            "type": "string"
          },
          "requestedBy": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "urgency": {
            "type": "string"
          },
          "location": {
            "$ref": "#/components/schemas/Location"
          },
          "createdAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Match": {
        "type": "object",
        "properties": {
          "matchId": {
            "type": "string"
          },
          "volunteerId": {
            "type": "string"
          },
          "skillId": {
            "type": "string"
          },
          "skillType": {
            "type": "string"
          },
          "matchScore": {
            "type": "number",
            "format": "double"
          },
          "distance": {
            "type": "number",
            "format": "double"
          },
          "trustScore": {
            "type": "number",
            "format": "double"
          },
          "status": {
            "type": "string"
          }
        }
      },
      "SOSRequestWithMatches": {
        "allOf": [
          {
            "$ref": "#/components/schemas/SOSRequest"
          },
          {
            "type": "object",
            "properties": {
              "matches": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Match"
                }
              }
            }
          }
        ]
      }
    }
  }
}

